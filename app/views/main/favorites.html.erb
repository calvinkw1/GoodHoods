<%= stylesheet_link_tag 'map', media: 'all', 'data-turbolinks-track' => true %>

  <nav class="navbar navbar-default navbar-fixed-top mynav">
    <div class="container">
      <ul>
      <div class="floatleft"><li id="nohover"><a href="/"><%= image_tag("header_icon.png") %></a></li></div> 
      <div class="floatright"><li>Logged in as <i><%= @user.username %></i></li>
      <li><%= link_to "Favorites", favorites_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Sign Out", logout_path, method: :delete %></li></div>
      </ul>
    </div>
  </nav>

<div class="container-fluid">

  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= @user.username %>'s Favorited Hoods</h2>
      </div>
    </div>
  </div>

  <div class="row spacer"></div>
  
  <div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-6">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Favorite Neighborhoods</th>
            <th>City</th>
            <th>State</th>
          </tr>
        </thead>
        <tbody>
          <% @fav_hoods.each do |fav| %>
            <tr class="text-left">
              <td><%= fav.name %></td>
              <td><%= fav.city %></td>
              <td><%= fav.state %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-3"></div>
  </div>
</div>